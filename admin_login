    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
        import { getAuth, signInWithEmailAndPassword } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";

        const firebaseConfig = {
            apiKey: "AIzaSyBFuPBD3IZWiklbRdW0IS78Xr2MHmqK2nU",
            authDomain: "cse-5-cse.firebaseapp.com",
            projectId: "cse-5-cse",
            storageBucket: "cse-5-cse.firebasestorage.app",
            messagingSenderId: "385090633983",
            appId: "1:385090633983:web:24dc98e6c58279dd520cca"
        };

        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);

        // --- AUTHORIZED LIST ---
        const AUTHORIZED_ADMINS = [
            "allubalaji12@gmail.com", 
            "cr2007@aol.com",
            "lr2007@aol.com"
        ];

        const form = document.getElementById('adminLoginForm');
        const errorBox = document.getElementById('errorBox');

        form.addEventListener('submit', (e) => {
            e.preventDefault();
            errorBox.style.display = "none";
            
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value;

            // Step 1: Check if email is in the admin list BEFORE hitting Firebase
            if (!AUTHORIZED_ADMINS.includes(email)) {
                errorBox.innerText = "No Access: You are not CR/LR";
                errorBox.style.display = "block";
                return;
            }

            // Step 2: Proceed with Authentication
            signInWithEmailAndPassword(auth, email, password)
                .then(() => {
                    // Success: Redirect to the main admin control page
                    window.location.href = "admin.html";
                })
                .catch((error) => {
                    errorBox.innerText = "Invalid credentials. Incident has been logged.";
                    errorBox.style.display = "block";
                });
        });
    </script>
